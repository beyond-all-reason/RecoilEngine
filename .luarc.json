{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime.version": "Lua 5.1",
  "completion.requireSeparator": "/",
  "runtime.path": [
    "?",
    "?.lua"
  ],
  "workspace.ignoreDir": [
    "cont",
    "lib",
    "tools",
    // NOTE: Ignore these files because they are imported via the recoil-lua-library submodule.
    "rts/Lua/library"
  ],
  "workspace.library": [
    "recoil-lua-library"
	],
  "runtime.special": {
    "VFS.Include": "require",
    "include": "require",
    "shard_include": "require"
  }
}
