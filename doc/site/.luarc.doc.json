// This file exists as a workaround for LuaLS/lua-language-server#2977. It
// should be an exact copy of .luarc.json with the addition of the disabled
// libraries in runtime.builtin.
//
// It is used to exclude builtin Lua libraries from out doc export in
// .github/workflows/generate-lua-library.yml
{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime.version": "Lua 5.1",
  "completion.requireSeparator": "/",
  "runtime.builtin": {
    "basic": "disable",
    "bit": "disable",
    "bit32": "disable",
    "builtin": "disable",
    "coroutine": "disable",
    "debug": "disable",
    "ffi": "disable",
    "io": "disable",
    "jit": "disable",
    "math": "disable",
    "os": "disable",
    "package": "disable",
    "string": "disable",
    "table": "disable",
    "table.clear": "disable",
    "table.new": "disable",
    "utf8": "disable"
  },
  "workspace.ignoreDir": [
    "cont",
    "lib"
  ],
  "runtime.path": [
    "?",
    "?.lua"
  ],
  "runtime.special": {
    "VFS.Include": "require",
    "include": "require",
    "shard_include": "require"
  }
}
